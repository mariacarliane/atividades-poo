importar  csv
import  matplotlib . pyplot  como  plt

enquanto  verdadeiro :
    op  =  input ( '1- Criar arquivo \ n 2- Ler arquivo \ n 3- Exibir gráfico \ n 4- Sair do Programa \ n Selecione uma opção:' )

    se  op  ==  '1' :
        x  =  int ( input ( 'Digite o número de profissões:' ))
        y  =  open ( 'tabela.csv' , 'w' )
        tente :
            escritor  =  csv . escritor ( y )
            escritor . escritor (( 'ocupaçao' , 'salario' ))
            para  c  no  intervalo ( 0 , x ):
                ocup  =  input ( 'escrever uma ocupação:' )
                sal  =  float ( input ( 'digite o salário desta ocupação:' ))
                escritor . writerow (( ocup , sal ))
        finalmente :
            y . fechar ()

    elif  op  ==  '2' :
        imprimir ( ' \ n ' )
        tente :
            imprimir ( abrir ( 'Tabela.csv' , 'r' ). ler ())
        exceto :
            imprimir ( 'NÃO FOI POSSÍVEL ENCOTRAR O ARQUIVO!' )

    elif  op  ==  '3' :
        tente :
            ocup  = []
            sal  = []
            y  =  open ( 'tabela.csv' , 'r' )
            r  =  csv . DictReader ( y )
            para  z  em  r :
                ocup . anexar ( z [ 'profissao' ])
                sal . append ( float ( z [ 'salario' ]))
            tente :
                plt . figura ( figsize = ( 6 , 6 ))
                plt . plot ( ocup , sal )
                plt . show ()
                plt . bar ( ocup , sal )
                plt . show ()
                fig1 , x1  =  plt . subtramas ( figsize = ( 6 , 6 ))
                x1 . pie ( sal , labels = ocup , autopct = '% 1.1f %%' , shadow = True , startangle = 90 )
                x1 . eixo ( 'igual' )
                plt . show ()
            finalmente :
                y . fechar ()

        exceto :
            imprimir ( 'não foi possível encontrar o arquivo' )

    elif  op  ==  '4' :
        intervalo
